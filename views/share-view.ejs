<%# limkon/telegram-file-manager/telegram-file-manager-df63cbcbc7a99b98d3f81cc263302592a9f7d5ed/views/share-view.ejs %>
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>文件分享 - <%= file.fileName %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; background-color: #e9ecef; margin: 0; padding: 20px; display: flex; justify-content: center; align-items: center; min-height: 100vh; }
    .share-container { background: #ffffff; border-radius: 8px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); width: 100%; max-width: 800px; text-align: center; overflow: hidden; }
    .header { padding: 20px; border-bottom: 1px solid #dee2e6; }
    .header h1 { font-size: 22px; word-wrap: break-word; margin: 0 0 10px; }
    .header p { color: #6c757d; font-size: 14px; margin: 0; }
    .preview-area { padding: 20px; background-color: #f8f9fa; min-height: 200px; display: flex; justify-content: center; align-items: center; }
    .preview-area img, .preview-area video { max-width: 100%; max-height: 70vh; display: block; }
    .preview-area pre { background-color: #212529; color: #f8f9fa; padding: 20px; border-radius: 5px; text-align: left; white-space: pre-wrap; word-wrap: break-word; max-height: 70vh; overflow-y: auto; width: 100%; box-sizing: border-box;}
    .download-section { padding: 20px; }
    .download-btn { display: inline-block; background-color: #28a745; color: white; padding: 12px 25px; border-radius: 5px; text-decoration: none; font-weight: 500; transition: background-color 0.3s; font-size: 18px; }
    .download-btn:hover { background-color: #218838; }
    .download-btn i { margin-right: 8px; }
    .no-preview { color: #6c757d; }
  </style>
</head>
<body>
  <div class="share-container">
    <div class="header">
      <h1><%= file.fileName %></h1>
      <p>文件類型: <%= file.mimetype || '未知' %></p>
    </div>
    <div class="preview-area">
      <% if (file.mimetype && file.mimetype.startsWith('image/')) { %>
        <img src="<%= downloadUrl %>" alt="圖片預覽">
      <% } else if (file.mimetype && file.mimetype.startsWith('video/')) { %>
        <video src="<%= downloadUrl %>" controls autoplay playsinline></video>
      <% } else if (textContent) { %>
        <pre><code><%- textContent %></code></pre>
      <% } else { %>
        <div class="no-preview">
          <i class="fas fa-file-alt fa-3x"></i>
          <p>此文件類型不支持線上預覽。</p>
        </div>
      <% } %>
    </div>
    <div class="download-section">
      <a href="<%= downloadUrl %>" class="download-btn">
        <i class="fas fa-download"></i>
        下載文件
      </a>
    </div>
  </div>
</body>
</html>
